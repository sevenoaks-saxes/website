---
const today = new Date();
---

<footer class="bg-white border-t border-graphite/5 text-graphite/60">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-between gap-8 sm:flex-row">
      <div class="text-center sm:text-left">
        <a href="/" class="text-lg font-serif font-normal text-opera-madder mb-2 block">
          Sevenoaks Saxes
        </a>
        <p class="text-xs uppercase tracking-widest font-semibold">
          &copy; {today.getFullYear()} Sevenoaks Saxes. All rights reserved.
        </p>
      </div>

      <div class="flex items-center space-x-10">
        <a href="/privacy" class="text-xs uppercase tracking-widest font-semibold hover:text-opera-madder transition-colors">
          Privacy Notice
        </a>
        <a href="/contact" class="text-xs uppercase tracking-widest font-semibold hover:text-opera-madder transition-colors">
          Contact
        </a>
      </div>
    </div>
  </div>
</footer>
