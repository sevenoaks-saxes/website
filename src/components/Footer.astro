    <div class="flex flex-col items-center justify-between gap-4 sm:flex-row">
      <div class="text-center sm:text-left">
        <p class="text-sm text-gray-500">
          &copy; {today.getFullYear()} Sevenoaks Saxes. All rights reserved.
        </p>
      </div>

      <div class="flex items-center space-x-6">
        <a href="/privacy" class="text-sm text-gray-500 hover:text-gray-900 transition-colors">
          Privacy Notice
        </a>
        <a href="/contact" class="text-sm text-gray-500 hover:text-gray-900 transition-colors">
          Contact
        </a>
      </div>
    </div>
  </div>
</footer>
