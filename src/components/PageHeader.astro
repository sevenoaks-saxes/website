---
import HeroMesh from './HeroMesh.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<section class="relative w-full overflow-hidden bg-white pt-32 pb-20 border-b border-knole-ink/5">
  <HeroMesh complexity={5} speed={0.3} opacity={0.2} grain={true} />

  <div class="relative z-10 prose-container">
    <slot name="before" />
    <div class="animate-fade-in-up">
      <h1 class="font-serif text-knole-ink m-0 text-5xl md:text-6xl lg:text-7xl leading-tight">
        {title}
      </h1>
      {
        description && (
          <p class="text-xl md:text-2xl text-knole-ink/80 mt-8 max-w-2xl font-sans leading-relaxed">
            {description}
          </p>
        )
      }
    </div>
    <slot />
  </div>
</section>
