---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const events = await getCollection('events');
  return events.map(event => ({
    params: { slug: event.id },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await render(event);

const formattedDate = new Date(event.data.date).toLocaleDateString('en-GB', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const typeColors = {
  concert: 'bg-brand-red text-brand-cream',
  rehearsal: 'bg-brand-mist-soft text-brand-mist-dark',
  'play day': 'bg-brand-leaf-soft text-brand-leaf-dark',
  other: 'bg-brand-charcoal-soft text-brand-charcoal',
};
---

<Layout title={event.data.name} description={event.data.description}>
  <div class="max-w-3xl mx-auto">
    <a href="/events" class="inline-flex items-center text-sm font-bold text-brand-charcoal-muted hover:text-brand-red mb-8 transition-colors">
      <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to events
    </a>

    <header class="mb-12">
      <div class="flex items-center space-x-2 mb-6">
        <span class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-bold uppercase tracking-wider ${typeColors[event.data.type] || typeColors.other}`}>
          {event.data.type}
        </span>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold mb-8">{event.data.name}</h1>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 bg-brand-cream-hover p-8 rounded-xl border border-brand-mist-border shadow-sm">
        <div>
          <h2 class="text-xs font-bold text-brand-mist-dark uppercase tracking-widest mb-2">Date</h2>
          <p class="text-lg text-brand-charcoal font-semibold">{formattedDate}</p>
        </div>
        <div>
          <h2 class="text-xs font-bold text-brand-mist-dark uppercase tracking-widest mb-2">Time</h2>
          <p class="text-lg text-brand-charcoal font-semibold">{event.data.time}</p>
        </div>
        <div class="sm:col-span-2">
          <h2 class="text-xs font-bold text-brand-mist-dark uppercase tracking-widest mb-2">Location</h2>
          <p class="text-lg text-brand-charcoal font-semibold">{event.data.location}</p>
        </div>
      </div>
    </header>

    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </div>
</Layout>
